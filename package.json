{
  "name": "workhoursrecord",
  "displayName": "Workhoursrecord",
  "description": "Work hours record",
  "version": "0.0.2",
  "license": "Apache-2.0",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Iden9/workhoursrecord.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workhoursrecord.showWorkHours",
        "title": "工时统计: 查看工时报告"
      },
      {
        "command": "workhoursrecord.exportCSV",
        "title": "工时统计: 导出CSV"
      },
      {
        "command": "workhoursrecord.uploadWorkHours",
        "title": "上传工时到服务器"
      },
      {
        "command": "workhoursrecord.clearStats",
        "title": "工时统计: 清除编辑统计数据"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "workhoursrecord",
          "title": "工时统计",
          "icon": "$(clock)"
        }
      ]
    },
    "views": {
      "workhoursrecord": [
        {
          "type": "webview",
          "id": "workhoursrecordView",
          "name": "工时管理"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "simple-git": "^3.30.0"
  }
}
